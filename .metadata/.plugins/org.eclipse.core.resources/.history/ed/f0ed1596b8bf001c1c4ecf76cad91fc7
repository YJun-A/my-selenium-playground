package PackageA;

import org.apache.logging.log4j.*;

public class log4jDemo {
	
	private static Logger log = LogManager.getLogger(log4jDemo.class.getName());

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		
		//Default configuration will only log errors to console
		//All the follow logs will be logged in console after setting up XML file for log4j
		log.debug("I am debugging");
		log.error("Error has occurred");
		log.info("I am giving info");
		log.fatal("I am fatal message");

	}//main

}//class
